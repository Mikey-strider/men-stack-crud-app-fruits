<%- include('../partials/header') %>
  <h1>Edit this <%= fruitDoc.name %></h1>

  <form action="/fruits/<%= fruitDoc._id %>?_method=PUT" method="POST">
    <label for="name">Name</label>
    <input type="text" name="name" id="name" value="<%= fruitDoc.name %>">
    <label for="isReadyToEat">Is Ready to Eat?</label>
    <input type="checkbox" name="isReadyToEat" <% if (fruitDoc.isReadyToEat) { %>
     checked
    <% } %>>
    <button type="submit">Edit Fruit</button>

  </form>
  <%- include('../partials/footer') %>
